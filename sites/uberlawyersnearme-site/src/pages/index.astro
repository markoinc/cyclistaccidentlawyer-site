---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states } from '../data/states';
import { caseTypes } from '../data/caseTypes';

const title = "Uber & Rideshare Accident Lawyers - Free Case Evaluation";
const description = "Injured in an Uber, Lyft, or rideshare accident? Get a free case evaluation from experienced rideshare accident attorneys. No fees unless you win. Available 24/7 nationwide.";

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Uber Lawyers Near Me",
  "url": "https://uberlawyersnearme.com",
  "description": description,
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://uberlawyersnearme.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

// Featured states (highest rideshare usage)
const featuredStates = states.filter(s => 
  ["california", "texas", "florida", "new-york", "illinois", "arizona"].includes(s.slug)
);

// Featured case types
const featuredCases = caseTypes.slice(0, 6);
---

<BaseLayout 
  title={title} 
  description={description}
  schemaMarkup={schemaMarkup}
>
  <!-- Hero Section -->
  <section class="uber-gradient text-white py-20 md:py-28">
    <div class="container-wide">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center gap-2 bg-primary-500/20 text-primary-300 px-4 py-2 rounded-full text-sm font-medium mb-6">
            <span class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></span>
            Free Consultations Available 24/7
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 leading-tight">
            Injured in an 
            <span class="text-primary-400">Uber</span> or 
            <span class="text-primary-400">Lyft</span> 
            Accident?
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
            Rideshare accidents are complex. Navigate Uber and Lyft's $1 million insurance policies with attorneys who specialize in rideshare claims.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <a href="#free-case-review" class="btn btn-cta text-lg px-8 py-4">
              Get Your Free Case Review
            </a>
          </div>
          
          <div class="flex flex-wrap items-center gap-6 text-gray-300">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>No Upfront Fees</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>$1M Policy Experts</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Nationwide</span>
            </div>
          </div>
        </div>
        
        <!-- Quick Form -->
        <div id="free-case-review" class="bg-white rounded-2xl shadow-2xl p-6 md:p-8">
          <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Free Case Evaluation</h2>
            <p class="text-gray-600">Find out what your rideshare accident case is worth</p>
          </div>
          
          <form action="https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/uberlaw-home" method="POST" class="space-y-4">
            <input type="hidden" name="source" value="uberlawyersnearme-home" />
            <input type="hidden" name="caseType" value="rideshare-accident" />
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                <input type="text" name="firstName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                <input type="text" name="lastName" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
              <input type="tel" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input type="email" name="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Type of Accident</label>
              <select name="accidentType" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required>
                <option value="">Select Type</option>
                <option value="uber-passenger">I was a passenger in Uber</option>
                <option value="lyft-passenger">I was a passenger in Lyft</option>
                <option value="uber-driver">I was an Uber driver</option>
                <option value="lyft-driver">I was a Lyft driver</option>
                <option value="hit-by-uber">Hit by an Uber/Lyft vehicle</option>
                <option value="pedestrian">Pedestrian hit by rideshare</option>
                <option value="cyclist">Cyclist hit by rideshare</option>
                <option value="other">Other rideshare accident</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">State Where Accident Occurred</label>
              <select name="state" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white" required>
                <option value="">Select State</option>
                {states.map(state => (
                  <option value={state.slug}>{state.name}</option>
                ))}
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Brief Description</label>
              <textarea name="description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-gray-900 bg-white resize-none" placeholder="What happened?"></textarea>
            </div>
            <button type="submit" class="w-full btn btn-cta text-lg py-4">
              Get My Free Evaluation
            </button>
          </form>
          
          <p class="text-xs text-gray-500 text-center mt-4">
            ðŸ”’ Your information is confidential. By submitting, you agree to our Privacy Policy.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Bar -->
  <section class="bg-primary-600 text-white py-8">
    <div class="container-wide">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl md:text-4xl font-bold">10B+</div>
          <div class="text-primary-100">Uber Rides Since 2009</div>
        </div>
        <div>
          <div class="text-3xl md:text-4xl font-bold">$1M</div>
          <div class="text-primary-100">Coverage Per Trip</div>
        </div>
        <div>
          <div class="text-3xl md:text-4xl font-bold">50</div>
          <div class="text-primary-100">States Covered</div>
        </div>
        <div>
          <div class="text-3xl md:text-4xl font-bold">$0</div>
          <div class="text-primary-100">Upfront Cost</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Rideshare Cases Are Different -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container-wide">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Why Rideshare Accidents Are Different
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Uber and Lyft accidents involve complex insurance layers that regular car accidents don't. Here's what makes them unique.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gray-50 rounded-xl p-8 card-hover">
          <div class="w-14 h-14 bg-primary-100 text-primary-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
