---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { resources } from '../../data/resources';

export function getStaticPaths() {
  return resources.map(resource => ({
    params: { resource: resource.slug },
    props: { resource }
  }));
}

const { resource } = Astro.props;

const title = `${resource.title} - Rideshare Accident Guide`;
const description = resource.description;

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Resources', url: '/resources' },
  { name: resource.title, url: `/resources/${resource.slug}` }
];

// Get related resources
const relatedResources = resources.filter(r => 
  r.slug !== resource.slug && r.category === resource.category
).slice(0, 3);
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
  <!-- Hero -->
  <section class="uber-gradient text-white py-16 md:py-20">
    <div class="container-wide">
      <nav class="text-sm text-gray-400 mb-6">
        <a href="/" class="hover:text-white">Home</a> / 
        <a href="/resources" class="hover:text-white">Resources</a> / 
        <span class="text-white">{resource.title}</span>
      </nav>
      
      <span class="text-sm font-medium text-primary-300 bg-primary-500/20 px-4 py-2 rounded-full">
        {resource.category}
      </span>
      
      <h1 class="text-4xl md:text-5xl font-extrabold mt-6 mb-4">{resource.title}</h1>
      <p class="text-xl text-gray-300 max-w-3xl">{resource.description}</p>
    </div>
  </section>

  <div class="py-16 md:py-24 bg-white">
    <div class="container-wide">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <article class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-p:text-gray-600 prose-li:text-gray-600 prose-strong:text-gray-900">
            <div set:html={resource.content.replace(/^## /gm, '<h2 class="text-2xl font-bold text-gray-900 mt-10 mb-4">').replace(/^### /gm, '<h3 class="text-xl font-semibold text-gray-900 mt-8 mb-3">').replace(/^- /gm, '<li class="ml-4">').replace(/\n\n/g, '</p><p class="mb-4">').replace(/^\*\*/gm, '<strong>').replace(/\*\*$/gm, '</strong>')} />
          </article>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- CTA Card -->
            <div class="bg-dark-900 text-white rounded-xl p-6">
              <h3 class="text-xl font-bold mb-4">Need Help Now?</h3>
              <p class="text-gray-300 mb-6">Get a free case evaluation from an experienced rideshare accident attorney.</p>
              <a href="/#free-case-review" class="btn btn-cta w-full">
                Start Free Review
              </a>
              <p class="text-xs text-gray-400 text-center mt-3">No fees unless you win</p>
            </div>

            <!-- Related Resources -->
            {relatedResources.length > 0 && (
              <div class="bg-gray-50 rounded-xl p-6">
                <h3 class="font-bold text-gray-900 mb-4">Related Resources</h3>
                <ul class="space-y-3">
                  {relatedResources.map(related => (
                    <li>
                      <a href={`/resources/${related.slug}`} class="text-primary-600 hover:text-primary-700 text-sm">
                        â†’ {related.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA -->
  <section class="py-16 bg-primary-600 text-white">
    <div class="container-narrow text-center">
      <h2 class="text-3xl font-bold mb-4">Have More Questions?</h2>
      <p class="text-xl text-primary-100 mb-8">Get personalized answers from a rideshare accident attorney. It's free.</p>
      <a href="/#free-case-review" class="btn bg-white text-primary-600 hover:bg-gray-100 font-bold px-8 py-4 text-lg">
        Get Free Case Review
      </a>
    </div>
  </section>
</BaseLayout>
