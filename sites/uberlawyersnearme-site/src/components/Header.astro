---
const navLinks = [
  { href: '/free-consultation', label: 'Free Consultation' },
  { href: '/states', label: 'Find by State' },
  { href: '/cities', label: 'Find by City' },
  { href: '/case-types', label: 'Case Types' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About' },
];
---

<header class="bg-zinc-900 border-b border-zinc-800 sticky top-0 z-50">
  <div class="container-wide">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <div class="w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <path d="M12 6v6l4 4" />
          </svg>
        </div>
        <span class="font-bold text-xl text-white">Uber Lawyers Near Me</span>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {navLinks.map(link => (
          <a href={link.href} class="text-gray-300 hover:text-primary-400 font-medium transition">
            {link.label}
          </a>
        ))}
      </nav>
      
      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        <a href="tel:1-800-555-0123" class="hidden md:flex items-center gap-2 text-primary-400 font-semibold">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>24/7 Free Consultation</span>
        </a>
        <a href="#free-case-review" class="btn btn-primary hidden sm:inline-flex">
          Get Free Review
        </a>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 text-white" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-zinc-800 bg-zinc-900">
    <nav class="container-wide py-4 space-y-2">
      {navLinks.map(link => (
        <a href={link.href} class="block py-2 text-gray-300 hover:text-primary-400 font-medium">
          {link.label}
        </a>
      ))}
      <a href="#free-case-review" class="block btn btn-primary text-center mt-4">
        Get Free Case Review
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
