---
const navLinks = [
  { href: '/free-consultation', label: 'Free Consultation' },
  { href: '/states', label: 'Find by State' },
  { href: '/case-types', label: 'Case Types' },
  { href: '/resources', label: 'Resources' },
  { href: '/about', label: 'About' },
];
---

<header class="bg-dark-900 border-b border-dark-700 sticky top-0 z-50">
  <div class="container-wide">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <div class="w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2" />
            <circle cx="7" cy="17" r="2" />
            <circle cx="17" cy="17" r="2" />
          </svg>
        </div>
        <div class="flex flex-col">
          <span class="font-bold text-lg text-white leading-tight">Uber Lawyers</span>
          <span class="text-xs text-primary-400 font-medium">Near Me</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        {navLinks.map(link => (
          <a href={link.href} class="text-gray-300 hover:text-primary-400 font-medium transition">
            {link.label}
          </a>
        ))}
      </nav>
      
      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        <a href="tel:+18885551234" class="hidden md:flex items-center gap-2 text-white hover:text-primary-400 transition">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="font-semibold">24/7</span>
        </a>
        <a href="#free-case-review" class="btn btn-primary hidden sm:inline-flex">
          Free Review
        </a>
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 text-white" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden lg:hidden border-t border-dark-700 bg-dark-900">
    <nav class="container-wide py-4 space-y-2">
      {navLinks.map(link => (
        <a href={link.href} class="block py-2 text-gray-300 hover:text-primary-400 font-medium">
          {link.label}
        </a>
      ))}
      <a href="#free-case-review" class="block btn btn-primary text-center mt-4">
        Get Free Case Review
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
