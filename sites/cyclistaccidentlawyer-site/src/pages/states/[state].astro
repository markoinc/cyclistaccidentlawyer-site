---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { states, type StateData } from '../../data/states';
import { getCitiesByState } from '../../data/cities';

export function getStaticPaths() {
  return states.map((state) => ({
    params: { state: state.slug },
    props: { stateData: state },
  }));
}

interface Props {
  stateData: StateData;
}

const { stateData } = Astro.props;
const stateCities = getCitiesByState(stateData.slug);

const title = `${stateData.name} Bicycle Accident Lawyer`;
const description = `Injured cycling in ${stateData.name}? Free case evaluation. ${stateData.threeFootLaw ? "3-foot passing law protects you." : "Know your rights."} ${stateData.statuteOfLimitations} to file.`;

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  "name": `${stateData.name} Bicycle Accident Lawyers`,
  "description": description,
  "url": `https://cyclistaccidentlawyer.com/states/${stateData.slug}`,
  "areaServed": { "@type": "State", "name": stateData.name },
  "serviceType": ["Bicycle Accident Law", "Cyclist Injury Law", "Personal Injury Law"],
  "priceRange": "Free Consultation"
};

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "States", url: "/states" },
  { name: stateData.name, url: `/states/${stateData.slug}` }
];

const stateIndex = states.findIndex(s => s.slug === stateData.slug);
const relatedStates = [
  states[(stateIndex - 1 + states.length) % states.length],
  states[(stateIndex + 1) % states.length],
  states[(stateIndex + 2) % states.length],
].filter(s => s.slug !== stateData.slug);
---

<BaseLayout title={title} description={description} schemaMarkup={schemaMarkup} breadcrumbs={breadcrumbs}>
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-24">
    <div class="container-wide">
      <div class="max-w-4xl">
        <div class="flex items-center gap-3 mb-4">
          <span class="bg-primary-500/20 text-primary-300 px-3 py-1 rounded-full text-sm font-medium">
            {stateData.abbreviation}
          </span>
          <span class="text-gray-400">|</span>
          <span class="text-gray-300">Bicycle Accident Law</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-extrabold mb-6">
          {stateData.name} Bicycle Accident Lawyer
        </h1>
        
        <p class="text-xl text-gray-300 mb-8">
          Injured in a bicycle accident in {stateData.name}? Our network of experienced attorneys fight for cyclists' rights and maximum compensation. Free consultation.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#free-case-review" class="btn btn-cta text-lg px-8 py-4">
            Free {stateData.name} Case Review
          </a>
          </div>
      </div>
    </div>
  </section>

  <!-- Quick Facts Bar -->
  <section class="bg-primary-600 text-white py-6">
    <div class="container-wide">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div>
          <div class="text-2xl font-bold">{stateData.statuteOfLimitations}</div>
          <div class="text-primary-100 text-sm">To File a Claim</div>
        </div>
        <div>
          <div class="text-2xl font-bold">{stateData.threeFootLaw ? "Yes" : "No"}</div>
          <div class="text-primary-100 text-sm">3-Foot Passing Law</div>
        </div>
        <div>
          <div class="text-2xl font-bold">{stateData.helmetLaw === "all-ages" ? "All Ages" : stateData.helmetLaw === "minors" ? "Minors" : "None"}</div>
          <div class="text-primary-100 text-sm">Helmet Requirement</div>
        </div>
        <div>
          <div class="text-2xl font-bold">{stateData.annualCyclistFatalities}</div>
          <div class="text-primary-100 text-sm">Annual Cyclist Deaths</div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-20">
    <div class="container-wide">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-12">
          
          <!-- Bicycle Laws -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">{stateData.name} Bicycle Laws</h2>
            
            <div class="grid md:grid-cols-2 gap-6">
              <!-- Helmet Law -->
              <div class="bg-gray-50 rounded-xl p-6">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                  <h3 class="font-bold text-gray-900">Helmet Law</h3>
                </div>
                <p class="text-gray-600">{stateData.helmetLawDetails}</p>
              </div>
              
              <!-- Passing Law -->
              <div class="bg-gray-50 rounded-xl p-6">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                  </div>
                  <h3 class="font-bold text-gray-900">Safe Passing Law</h3>
                </div>
                <p class="text-gray-600">{stateData.threeFootDetails}</p>
              </div>
              
              <!-- Bike Lane Law -->
              <div class="bg-gray-50 rounded-xl p-6 md:col-span-2">
                <div class="flex items-center gap-3 mb-3">
                  <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                    </svg>
                  </div>
                  <h3 class="font-bold text-gray-900">Bike Lane & Road Use</h3>
                </div>
                <p class="text-gray-600">{stateData.bikeLaneLaw}</p>
              </div>
            </div>
          </div>

          <!-- Fault System -->
          <div class="bg-gray-100 rounded-xl p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">{stateData.name} Fault System</h2>
            <div class="flex items-center gap-3 mb-4">
              <span class={`px-4 py-2 rounded-full text-sm font-semibold ${
                stateData.faultSystem.includes("Contributory") 
                  ? "bg-red-100 text-red-800" 
                  : stateData.faultSystem.includes("Pure comparative")
                    ? "bg-green-100 text-green-800"
                    : "bg-yellow-100 text-yellow-800"
              }`}>
                {stateData.faultSystem}
              </span>
            </div>
            {stateData.faultSystem.includes("Contributory") ? (
              <p class="text-gray-600">
                <strong class="text-red-700">Warning:</strong> {stateData.name} uses contributory negligence. If you are found even 1% at fault, you may be barred from recovering any damages. This makes legal representation especially important.
              </p>
            ) : stateData.faultSystem.includes("Pure comparative") ? (
              <p class="text-gray-600">
                <strong class="text-green-700">Favorable:</strong> {stateData.name} uses pure comparative fault. You can recover damages even if you were partially at fault‚Äîyour compensation is simply reduced by your percentage of fault.
              </p>
            ) : (
              <p class="text-gray-600">
                {stateData.name} uses modified comparative fault. You can recover damages as long as you are not more than {stateData.faultSystem.includes("50%") ? "49%" : "50%"} at fault for the accident.
              </p>
            )}
          </div>

          <!-- Dangerous Routes -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Most Dangerous Cycling Routes in {stateData.name}</h2>
            <ul class="space-y-3">
              {stateData.dangerousRoutes.map((route) => (
                <li class="flex items-start gap-3">
                  <span class="text-red-500 mt-1">‚ö†Ô∏è</span>
                  <span class="text-gray-700">{route}</span>
                </li>
              ))}
            </ul>
            <p class="text-gray-600 mt-4">
              If you were injured on any of these routes, our attorneys understand the specific hazards and can help build your case.
            </p>
          </div>

          <!-- Unique Facts -->
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">What Makes {stateData.name} Unique for Cyclists</h2>
            <ul class="space-y-3">
              {stateData.uniqueFacts.map((fact) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-primary-500 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">{fact}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Cities -->
          {stateCities.length > 0 && (
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Find a Bicycle Accident Lawyer by City</h2>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                {stateCities.map(city => (
                  <a 
                    href={`/cities/${city.slug}`}
                    class="bg-white rounded-lg border border-gray-200 p-4 hover:border-primary-500 hover:shadow-md transition"
                  >
                    <div class="font-semibold text-gray-900">{city.name}</div>
                    <div class="text-sm text-gray-500">Bike Score: {city.bikeScore}</div>
                  </a>
                ))}
              </div>
            </div>
          )}

        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <!-- Case Review Form -->
            <div id="free-case-review" class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-4 text-center">Free {stateData.name} Case Review</h3>
              
              <form action="https://services.leadconnectorhq.com/hooks/ASHRZ5ZFolSHXM3RyPvk/webhook-trigger/e1d4ee98-7b23-48e1-8f3b-2bf0aff93afc" method="POST" class="space-y-4">
                <input type="hidden" name="source" value={`cyclistaccidentlawyer-${stateData.slug}`} />
                <input type="hidden" name="state" value={stateData.slug} />
                
                <div>
                  <input type="text" name="firstName" placeholder="First Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
                </div>
                <div>
                  <input type="text" name="lastName" placeholder="Last Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
                </div>
                <div>
                  <input type="tel" name="phone" placeholder="Phone Number" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
                </div>
                <div>
                  <input type="email" name="email" placeholder="Email Address" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
                </div>
                <div>
                  <textarea name="description" placeholder="Describe your bicycle accident..." rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg resize-none"></textarea>
                </div>
                <button type="submit" class="w-full btn btn-cta py-4">
                  Get Free Evaluation
                </button>
              </form>
              
              <p class="text-xs text-gray-500 text-center mt-4">
                üîí Confidential ‚Ä¢ No fees unless you win
              </p>
            </div>

            <!-- Key Stats Card -->
            <div class="bg-gray-100 rounded-xl p-6">
              <h3 class="font-bold text-gray-900 mb-4">{stateData.name} Cyclist Safety Stats</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600">Annual Cyclist Deaths</span>
                  <span class="font-semibold text-gray-900">{stateData.annualCyclistFatalities}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Death Rate (per 100k)</span>
                  <span class="font-semibold text-gray-900">{stateData.cyclistDeathRate}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Fatality Trend</span>
                  <span class={`font-semibold ${
                    stateData.fatalityTrend === "Critical" ? "text-red-600" :
                    stateData.fatalityTrend === "Increasing" ? "text-orange-600" :
                    stateData.fatalityTrend === "Decreasing" ? "text-green-600" :
                    "text-gray-900"
                  }`}>{stateData.fatalityTrend}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Min. Insurance</span>
                  <span class="font-semibold text-gray-900 text-sm">{stateData.minInsurance}</span>
                </div>
              </div>
            </div>

            <!-- Related States -->
            <div class="bg-white rounded-xl border border-gray-200 p-6">
              <h3 class="font-bold text-gray-900 mb-4">Nearby States</h3>
              <div class="space-y-2">
                {relatedStates.slice(0, 3).map(state => (
                  <a 
                    href={`/states/${state.slug}`}
                    class="block py-2 px-3 rounded-lg hover:bg-gray-50 transition"
                  >
                    <span class="font-medium text-gray-900">{state.name}</span>
                    <span class="text-sm text-gray-500 ml-2">({state.abbreviation})</span>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary-600 py-12">
    <div class="container-wide text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Injured Cycling in {stateData.name}? Get Help Today.
      </h2>
      <p class="text-primary-100 mb-6 max-w-2xl mx-auto">
        You have {stateData.statuteOfLimitations} to file your claim. Don't wait‚Äîevidence disappears and deadlines pass.
      </p>
      <a href="#free-case-review" class="btn bg-white hover:bg-gray-100 text-primary-600 font-bold text-lg px-8 py-4">
        Start Your Free Case Review
      </a>
    </div>
  </section>
</BaseLayout>
