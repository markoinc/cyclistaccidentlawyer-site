---
import BaseLayout from '../layouts/BaseLayout.astro';
import { states } from '../data/states';

const title = "Bicycle Accident Lawyers - Free Case Review";
const description = "Injured in a bicycle accident? Get a free case evaluation from experienced cyclist accident attorneys. No fees unless you win. Available 24/7 nationwide.";

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Cyclist Accident Lawyer",
  "url": "https://cyclistaccidentlawyer.com",
  "description": description,
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://cyclistaccidentlawyer.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does it cost to hire a bicycle accident lawyer?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Nothing upfront. Our attorneys work on contingency, meaning they only get paid if you win. The initial consultation is always free."
      }
    },
    {
      "@type": "Question",
      "name": "What if I wasn't wearing a helmet when I was hit?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You may still be able to recover compensation. Most states don't require adult cyclists to wear helmets. Even in states with helmet laws, not wearing a helmet doesn't excuse the driver's negligence."
      }
    },
    {
      "@type": "Question",
      "name": "How long do I have to file a bicycle accident claim?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "This varies by state‚Äîfrom 1 year (Louisiana, Tennessee) to 6 years (Maine, Minnesota, North Dakota). Check your state's page for specific deadlines and don't delay."
      }
    },
    {
      "@type": "Question",
      "name": "What compensation can I receive for a bicycle accident?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You may be entitled to medical expenses, lost wages, pain and suffering, bike replacement, permanent disability compensation, and in wrongful death cases, funeral expenses and loss of companionship."
      }
    },
    {
      "@type": "Question",
      "name": "What if the driver who hit me drove off (hit-and-run)?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Even if the driver is never found, you may still have options. Your own uninsured motorist coverage (if you have auto insurance) may cover your injuries. An attorney can help identify all potential sources of compensation."
      }
    }
  ]
};

const schemaMarkup = [websiteSchema, faqSchema];

// Featured states (most cycling fatalities or best infrastructure)
const featuredStates = states.filter(s => 
  ["california", "florida", "texas", "new-york", "colorado", "oregon"].includes(s.slug)
);

// Critical fatality states
const criticalStates = states.filter(s => s.fatalityTrend === "Critical" || s.fatalityTrend === "Increasing").slice(0, 6);
