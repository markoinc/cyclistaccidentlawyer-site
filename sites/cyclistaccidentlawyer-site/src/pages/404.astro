---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Page Not Found";
const description = "The page you're looking for doesn't exist. Find bicycle accident lawyers and resources on our site.";
---

<BaseLayout title={title} description={description}>
  <section class="py-20 md:py-32">
    <div class="container-narrow text-center">
      <div class="text-8xl mb-6">ðŸš´</div>
      
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Page Not Found
      </h1>
      
      <p class="text-xl text-gray-600 mb-8 max-w-lg mx-auto">
        Sorry, the page you're looking for doesn't exist or has been moved. Let us help you find what you need.
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
        <a href="/" class="btn btn-primary px-8 py-4">
          Go to Homepage
        </a>
        <a href="/free-consultation" class="btn btn-secondary px-8 py-4">
          Free Case Review
        </a>
      </div>
      
      <div class="bg-gray-100 rounded-xl p-8 max-w-2xl mx-auto">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Popular Pages</h2>
        <div class="grid sm:grid-cols-2 gap-4 text-left">
          <a href="/states" class="block p-3 bg-white rounded-lg hover:shadow-md transition">
            <div class="font-semibold text-gray-900">Find by State</div>
            <div class="text-sm text-gray-600">Bicycle laws in all 50 states</div>
          </a>
          <a href="/case-types" class="block p-3 bg-white rounded-lg hover:shadow-md transition">
            <div class="font-semibold text-gray-900">Case Types</div>
            <div class="text-sm text-gray-600">Dooring, right-hook, and more</div>
          </a>
          <a href="/blog" class="block p-3 bg-white rounded-lg hover:shadow-md transition">
            <div class="font-semibold text-gray-900">Blog</div>
            <div class="text-sm text-gray-600">Cyclist safety and legal tips</div>
          </a>
          <a href="/resources" class="block p-3 bg-white rounded-lg hover:shadow-md transition">
            <div class="font-semibold text-gray-900">Resources</div>
            <div class="text-sm text-gray-600">Guides and legal information</div>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <section class="bg-primary-600 py-12">
    <div class="container-wide text-center">
      <h2 class="text-2xl font-bold text-white mb-4">
        Need Help With a Bicycle Accident Case?
      </h2>
      <p class="text-primary-100 mb-6">
        Get a free case evaluation from experienced bicycle accident attorneys.
      </p>
      </div>
  </section>
</BaseLayout>
