---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { articles, type Article, getArticlesByCategory } from '../../data/articles';

export function getStaticPaths() {
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

interface Props {
  article: Article;
}

const { article } = Astro.props;
const relatedArticles = getArticlesByCategory(article.category).filter(a => a.slug !== article.slug).slice(0, 3);

const title = article.title;
const description = article.excerpt;

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" },
  { name: article.title, url: `/blog/${article.slug}` }
];

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": article.title,
  "description": article.excerpt,
  "datePublished": article.publishDate,
  "author": {
    "@type": "Organization",
    "name": "Cyclist Accident Lawyer"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Cyclist Accident Lawyer",
    "url": "https://cyclistaccidentlawyer.com"
  }
};
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs} schemaMarkup={articleSchema}>
  <article>
    <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-20">
      <div class="container-narrow">
        <div class="flex items-center gap-3 mb-4">
          <a href={`/blog/category/${article.category.toLowerCase().replace(/\s+/g, '-')}`} class="bg-primary-500/20 text-primary-300 px-3 py-1 rounded-full text-sm font-medium hover:bg-primary-500/30 transition">
            {article.category}
          </a>
          <span class="text-gray-400">•</span>
          <span class="text-gray-400">{article.readTime}</span>
          <span class="text-gray-400">•</span>
          <span class="text-gray-400">{article.publishDate}</span>
        </div>
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight">
          {article.title}
        </h1>
      </div>
    </section>

    <section class="py-12 md:py-16">
      <div class="container-wide">
        <div class="grid lg:grid-cols-3 gap-12">
          <!-- Article Content -->
          <div class="lg:col-span-2">
            <div class="prose prose-lg max-w-none" set:html={article.content.replace(/\n/g, '<br/>')} />
            
            <!-- CTA After Article -->
            <div class="mt-12 bg-primary-50 border border-primary-100 rounded-xl p-8 text-center">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Were You Injured in a Bicycle Accident?
              </h3>
              <p class="text-gray-600 mb-6">
                Get a free case evaluation from experienced bicycle accident attorneys who understand cyclist rights.
              </p>
              <a href="/free-consultation" class="btn btn-cta px-8 py-4">
                Get Free Case Review
              </a>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="sticky top-24 space-y-6">
              <!-- Quick CTA -->
              <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
                <h3 class="font-bold text-gray-900 mb-4">Free Case Evaluation</h3>
                <p class="text-gray-600 text-sm mb-4">
                  Injured in a bicycle accident? Get help from experienced attorneys.
                </p>
                <a href="/free-consultation" class="btn btn-cta w-full py-3">
                  Start Free Review
                </a>
                <p class="text-xs text-gray-500 text-center mt-3">No fees unless you win</p>
              </div>

              <!-- Related Articles -->
              {relatedArticles.length > 0 && (
                <div class="bg-gray-100 rounded-xl p-6">
                  <h3 class="font-bold text-gray-900 mb-4">Related Articles</h3>
                  <div class="space-y-4">
                    {relatedArticles.map(related => (
                      <a 
                        href={`/blog/${related.slug}`}
                        class="block hover:text-primary-600 transition"
                      >
                        <h4 class="font-medium text-gray-900 hover:text-primary-600 line-clamp-2">
                          {related.title}
                        </h4>
                        <span class="text-sm text-gray-500">{related.readTime}</span>
                      </a>
                    ))}
                  </div>
                </div>
              )}

              <!-- Call CTA -->
              <div class="bg-gray-900 text-white rounded-xl p-6 text-center">
                <p class="text-sm mb-2">Need help now?</p>
                <p class="text-xs text-gray-400 mt-2">24/7 Free Consultation</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </article>
</BaseLayout>
