---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { articles, getArticleCategories, getArticlesByCategory } from '../../../data/articles';

export function getStaticPaths() {
  const categories = getArticleCategories();
  return categories.map((category) => ({
    params: { category: category.toLowerCase().replace(/\s+/g, '-') },
    props: { categoryName: category },
  }));
}

interface Props {
  categoryName: string;
}

const { categoryName } = Astro.props;
const categoryArticles = getArticlesByCategory(categoryName);
const allCategories = getArticleCategories();

const title = `${categoryName} Articles - Bicycle Accident Blog`;
const description = `Expert articles about ${categoryName.toLowerCase()} and bicycle accidents. Legal tips, safety advice, and your rights.`;

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" },
  { name: categoryName, url: `/blog/category/${categoryName.toLowerCase().replace(/\s+/g, '-')}` }
];
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16">
    <div class="container-wide">
      <div class="max-w-3xl">
        <span class="text-primary-400 text-sm font-medium">Blog Category</span>
        <h1 class="text-4xl md:text-5xl font-extrabold mt-2">
          {categoryName}
        </h1>
        <p class="text-xl text-gray-300 mt-4">
          {categoryArticles.length} articles about {categoryName.toLowerCase()}
        </p>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-8 bg-gray-100 border-b border-gray-200">
    <div class="container-wide">
      <div class="flex flex-wrap gap-3 justify-center">
        <a href="/blog" class="px-4 py-2 bg-white text-gray-700 rounded-full font-medium hover:bg-primary-100 transition">
          All Articles
        </a>
        {allCategories.map(cat => (
          <a 
            href={`/blog/category/${cat.toLowerCase().replace(/\s+/g, '-')}`}
            class={`px-4 py-2 rounded-full font-medium transition ${
              cat === categoryName 
                ? 'bg-primary-600 text-white' 
                : 'bg-white text-gray-700 hover:bg-primary-100'
            }`}
          >
            {cat}
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16">
    <div class="container-wide">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categoryArticles.map(article => (
          <a 
            href={`/blog/${article.slug}`}
            class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition group"
          >
            <div class="p-6">
              <div class="flex items-center gap-3 mb-3">
                <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-xs font-medium">
                  {article.category}
                </span>
                <span class="text-gray-400 text-sm">{article.readTime}</span>
              </div>
              <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition line-clamp-2">
                {article.title}
              </h2>
              <p class="text-gray-600 line-clamp-3">
                {article.excerpt}
              </p>
              <div class="mt-4 text-primary-600 font-medium flex items-center gap-2">
                Read Article
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
