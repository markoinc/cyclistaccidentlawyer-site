---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { articles, getArticleCategories } from '../../data/articles';

const title = "Bicycle Accident Blog - Safety & Legal Tips";
const description = "Expert articles on bicycle accident law, cyclist safety, dooring prevention, and your legal rights. Stay informed and ride safe.";

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Blog", url: "/blog" }
];

const categories = getArticleCategories();
const featuredArticles = articles.slice(0, 6);
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-24">
    <div class="container-wide">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-extrabold mb-6">
          Bicycle Accident Blog
        </h1>
        <p class="text-xl text-gray-300">
          Expert insights on cyclist safety, bicycle law, and what to do if you're injured. Knowledge is powerâ€”stay informed.
        </p>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-8 bg-gray-100 border-b border-gray-200">
    <div class="container-wide">
      <div class="flex flex-wrap gap-3 justify-center">
        <a href="/blog" class="px-4 py-2 bg-primary-600 text-white rounded-full font-medium">
          All Articles
        </a>
        {categories.map(category => (
          <a 
            href={`/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
            class="px-4 py-2 bg-white text-gray-700 rounded-full font-medium hover:bg-primary-100 transition"
          >
            {category}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="py-16">
    <div class="container-wide">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map(article => (
          <a 
            href={`/blog/${article.slug}`}
            class="bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden hover:shadow-lg transition group"
          >
            <div class="p-6">
              <div class="flex items-center gap-3 mb-3">
                <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-xs font-medium">
                  {article.category}
                </span>
                <span class="text-gray-400 text-sm">{article.readTime}</span>
              </div>
              <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition line-clamp-2">
                {article.title}
              </h2>
              <p class="text-gray-600 line-clamp-3">
                {article.excerpt}
              </p>
              <div class="mt-4 text-primary-600 font-medium flex items-center gap-2">
                Read Article
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="bg-primary-600 py-12">
    <div class="container-wide text-center">
      <h2 class="text-2xl font-bold text-white mb-4">
        Need Help With a Bicycle Accident Case?
      </h2>
      <p class="text-primary-100 mb-6">
        Get a free case evaluation from experienced bicycle accident attorneys.
      </p>
      <a href="/free-consultation" class="btn bg-white hover:bg-gray-100 text-primary-600 font-bold px-8 py-4">
        Get Free Case Review
      </a>
    </div>
  </section>
</BaseLayout>
