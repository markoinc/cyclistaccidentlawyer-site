---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { resources, type Resource, getResourcesByCategory } from '../../data/resources';

export function getStaticPaths() {
  return resources.map((resource) => ({
    params: { resource: resource.slug },
    props: { resource },
  }));
}

interface Props {
  resource: Resource;
}

const { resource } = Astro.props;
const relatedResources = getResourcesByCategory(resource.category).filter(r => r.slug !== resource.slug).slice(0, 3);

const title = resource.title;
const description = resource.description;

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Resources", url: "/resources" },
  { name: resource.title, url: `/resources/${resource.slug}` }
];
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 md:py-20">
    <div class="container-narrow">
      <span class="bg-primary-500/20 text-primary-300 px-3 py-1 rounded-full text-sm font-medium">
        {resource.category}
      </span>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mt-4 leading-tight">
        {resource.title}
      </h1>
      <p class="text-xl text-gray-300 mt-4">
        {resource.description}
      </p>
    </div>
  </section>

  <section class="py-12 md:py-16">
    <div class="container-wide">
      <div class="grid lg:grid-cols-3 gap-12">
        <div class="lg:col-span-2">
          <div class="prose prose-lg max-w-none" set:html={resource.content.replace(/\n/g, '<br/>')} />
          
          <!-- CTA After Content -->
          <div class="mt-12 bg-primary-50 border border-primary-100 rounded-xl p-8 text-center">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              Need Help With Your Bicycle Accident Case?
            </h3>
            <p class="text-gray-600 mb-6">
              Get a free case evaluation from experienced bicycle accident attorneys.
            </p>
            <a href="/free-consultation" class="btn btn-cta px-8 py-4">
              Get Free Case Review
            </a>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
              <h3 class="font-bold text-gray-900 mb-4">Free Case Evaluation</h3>
              <p class="text-gray-600 text-sm mb-4">
                Injured in a bicycle accident? Get help from experienced attorneys.
              </p>
              <a href="/free-consultation" class="btn btn-cta w-full py-3">
                Start Free Review
              </a>
              <p class="text-xs text-gray-500 text-center mt-3">No fees unless you win</p>
            </div>

            {relatedResources.length > 0 && (
              <div class="bg-gray-100 rounded-xl p-6">
                <h3 class="font-bold text-gray-900 mb-4">Related Resources</h3>
                <div class="space-y-3">
                  {relatedResources.map(related => (
                    <a 
                      href={`/resources/${related.slug}`}
                      class="block text-gray-700 hover:text-primary-600 transition"
                    >
                      {related.title}
                    </a>
                  ))}
                </div>
              </div>
            )}

            <div class="bg-gray-900 text-white rounded-xl p-6 text-center">
              <p class="text-sm mb-2">Speak to an attorney now</p>
              <p class="text-xs text-gray-400 mt-2">Available 24/7</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
