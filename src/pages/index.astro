---
import BaseLayout from '../layouts/BaseLayout.astro';
import LeadForm from '../components/LeadForm.astro';
import { states, getHighFatalityStates, getContributoryNegligenceStates, getIdahoStopStates } from '../data/states';

const highFatalityStates = getHighFatalityStates();
const contributoryStates = getContributoryNegligenceStates();
const idahoStopStates = getIdahoStopStates();

const schema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Cyclist Accident Lawyer",
  "url": "https://cyclistaccidentlawyer.com",
  "description": "Connect with experienced bicycle accident lawyers nationwide",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://cyclistaccidentlawyer.com/states/{search_term}",
    "query-input": "required name=search_term"
  }
};
---

<BaseLayout 
  title="Bicycle Accident Lawyers"
  description="Injured in a cycling accident? Connect with experienced bicycle accident lawyers who fight for cyclist rights. Free case evaluation. No fees unless you win."
  schema={schema}
>
  <!-- Hero Section -->
