---
import BaseLayout from '../../layouts/BaseLayout.astro';
import LeadForm from '../../components/LeadForm.astro';
import { articles, getArticleCategories, getArticlesByCategory, getRecentArticles } from '../../data/articles';

const categories = getArticleCategories();
const recentArticles = getRecentArticles(6);
---

<BaseLayout 
  title="Bicycle Accident Blog & Legal Resources"
  description="Expert articles on bicycle accidents, cycling laws, injury claims, and safety tips. Free legal resources for cyclists."
>
  <section class="bg-primary text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <nav class="text-sm mb-4 text-gray-300">
        <a href="/" class="hover:text-white">Home</a> / <span>Blog</span>
      </nav>
      <h1 class="text-4xl font-bold mb-4">ðŸš´ Bicycle Accident Blog</h1>
      <p class="text-xl text-gray-200 max-w-3xl">Expert articles on bicycle accidents, cycling laws, injury claims, and safety tips. Knowledge is powerâ€”understand your rights.</p>
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-4 gap-8">
        <div class="lg:col-span-3">
          <!-- Recent Articles -->
          <div class="mb-12">
            <h2 class="text-2xl font-bold mb-6">Recent Articles</h2>
            <div class="grid md:grid-cols-2 gap-6">
              {recentArticles.map(article => (
                <a href={`/blog/${article.slug}/`} class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-lg transition group">
                  <div class="p-6">
                    <span class="text-xs text-primary font-semibold uppercase">{article.category}</span>
                    <h3 class="font-bold text-lg mt-2 group-hover:text-primary transition">{article.title}</h3>
                    <p class="text-sm text-gray-600 mt-2 line-clamp-2">{article.description}</p>
                    <div class="mt-4 flex items-center text-xs text-gray-500">
                      <span>{article.date}</span>
                      <span class="mx-2">â€¢</span>
                      <span>{article.readTime} read</span>
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>

          <!-- Articles by Category -->
          {categories.map(category => (
            <div class="mb-12">
              <h2 class="text-2xl font-bold mb-6">{category}</h2>
              <div class="grid md:grid-cols-2 gap-4">
                {getArticlesByCategory(category).map(article => (
                  <a href={`/blog/${article.slug}/`} class="flex gap-4 p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                    <div>
                      <h3 class="font-semibold text-sm hover:text-primary">{article.title}</h3>
                      <p class="text-xs text-gray-500 mt-1">{article.readTime} read</p>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-24">
            <LeadForm source="blog-index" compact={true} title="Free Case Review" subtitle="Get legal help today" />
            
            <div class="mt-8 bg-gray-50 p-6 rounded-lg">
              <h3 class="font-bold mb-4">Categories</h3>
              <ul class="space-y-2">
                {categories.map(category => (
                  <li>
                    <span class="text-sm text-gray-600">{category}</span>
                    <span class="text-xs text-gray-400 ml-2">({getArticlesByCategory(category).length})</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="mt-8 bg-primary text-white p-6 rounded-lg">
              <h3 class="font-bold mb-3">Need Legal Help?</h3>
              <p class="text-sm text-gray-200 mb-4">Our articles are educational, but every case is unique. Get personalized advice from an attorney.</p>
              <a href="/free-consultation/" class="block text-center bg-secondary text-gray-900 font-semibold py-2 px-4 rounded hover:bg-secondary-dark transition">
                Free Consultation
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
